<?xml version="1.0"?>
<robot name="simple_quadruped">
  <link name="base">
    <inertial>
      <origin xyz="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.3 0.2 0.05"/>
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.2 0.05"/>
      </geometry>
    </collision>
  </link>
  <!-- Four legs -->
  <!-- Front Left Leg -->
  <link name="fl_leg">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
    </collision>
  </link>
  <joint name="fl_hip" type="revolute">
    <parent link="base"/>
    <child link="fl_leg"/>
    <origin xyz="0.13 0.09 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1" velocity="1"/>
  </joint>
  <!-- Front Right Leg -->
  <link name="fr_leg">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
    </collision>
  </link>
  <joint name="fr_hip" type="revolute">
    <parent link="base"/>
    <child link="fr_leg"/>
    <origin xyz="0.13 -0.09 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1" velocity="1"/>
  </joint>
  <!-- Rear Left Leg -->
  <link name="rl_leg">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
    </collision>
  </link>
  <joint name="rl_hip" type="revolute">
    <parent link="base"/>
    <child link="rl_leg"/>
    <origin xyz="-0.13 0.09 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1" velocity="1"/>
  </joint>
  <!-- Rear Right Leg -->
  <link name="rr_leg">
    <visual>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.15" radius="0.015"/>
      </geometry>
    </collision>
  </link>
  <joint name="rr_hip" type="revolute">
    <parent link="base"/>
    <child link="rr_leg"/>
    <origin xyz="-0.13 -0.09 0" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-1.57" upper="1.57" effort="1" velocity="1"/>
  </joint>
</robot>
